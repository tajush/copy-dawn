{% schema %}
{
    "name": "all-collections",
    "settings": [
        {
            "type": "color",
            "id": "background",
            "label": "Background color",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text-color",
            "label": "text-color",
            "default": "#000000"
        }
        
        ],
        "presets": [
            {
                "name": "all-collections"
            }
        ]
}
{% endschema %}