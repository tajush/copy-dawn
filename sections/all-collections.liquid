<section class="all-collections">
    <h1>Feature Collections</h1>
    <div class="collection-container">
        <div class="all-collection-wrapper">
            {% for collection in collections %}
                <div class="collection-card">
                    <img width="300" height="300" loading="lazy" src="{{collections.featured_image | image_url   }}" alt="">
                    <h3>{{collection.title |  link_to: collection.url}}</h3>
                </div>
               
                
            {% endfor %}
        </div>
    </div>

</section>
<style>
    .all-collections{
        background-color: {{section.settings.background}};
        color:{{section.settings.text-color}};
        padding: 10px;
    }
    .collection-container{
        position: relative;
        overflow: scroll;
    }
    .all-collection-wrapper{
        display: flex;
        transition: transform .3s ease ;
    }
